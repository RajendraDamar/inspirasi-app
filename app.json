{
  "expo": {
    "name": "Inspirasi",
    "slug": "inspirasi-app",
    "version": "0.1.0",
    "orientation": "portrait",
  "icon": "assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
  "image": "assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1976D2"
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "adaptiveIcon": {
  "foregroundImage": "assets/adaptive-icon.png",
        "backgroundColor": "#1976D2"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Inspirasi to access your location for accurate marine weather and reports.",
          "locationWhenInUsePermission": "Allow Inspirasi to access your location while using the app."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "assets/notification-icon.png",
          "color": "#1976D2"
        }
      ]
    ]
  }
}
